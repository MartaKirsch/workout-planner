// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Type {
  STRETCH
  EXERCISE
}

enum BodyPartName {
  ARMS
  LEGS
  ABS
  BACK
  FBW
}

model BodyPart {
  name BodyPartName @id
  exercise Exercise[]
}

model User {
  id    String     @default(uuid()) @id
  email String  @unique
  name  String  @unique
  password String
  exercises Exercise[]
}

model Exercise {
  id    String     @default(uuid()) @id
  name String 
  description String
  body_parts BodyPart[] 
  author User @relation(fields: [authorId], references: [id])
  authorId   String  
  type Type
}

